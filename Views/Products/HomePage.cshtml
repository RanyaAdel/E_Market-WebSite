@model IEnumerable<EMMARKET.Models.Product>

@{
    ViewBag.Title = "HomePage";
}

<h2>HomePage</h2>

<link href="~/Content/Style.css" rel="stylesheet" />



<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content(item .image)" alt="..." width="100" height="100" />

                <div class="caption">
                    <h3>@item.name</h3>
                    <p>@item.description</p>
                    <p>@item.price</p>
                    @Html.ActionLink("View Details", "Details", "Products", new { id = item.Id }, new { @class = "btn btn-success" }) |


                </div>
            </div>
        </div>



    }
</div>



